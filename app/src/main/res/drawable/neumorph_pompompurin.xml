<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer (bottom right) -->
    <item android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#E5C98E"/> <!-- Soft shadow -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Highlight layer (top left) -->
    <item android:left="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Highlight -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Base card layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFACD "/> <!-- Slightly darker than #FFFCE0 -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>
