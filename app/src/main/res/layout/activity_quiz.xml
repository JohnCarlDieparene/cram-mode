<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Back Button at Top Left -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_revert"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Back Button"
        android:scaleType="centerInside"
        app:tint="@android:color/black" />

    <!-- ScrollView for Quiz Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backButton"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/timerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time remaining: 30 sec"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />


            <!-- Question Counter -->
            <TextView
                android:id="@+id/questionCounterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1 of 5"
                android:textSize="18sp"
                android:textColor="#212121"
                android:layout_marginTop="16dp"
                android:gravity="center"/>


            <TextView
                android:id="@+id/questionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question appears here"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp"/>

            <RadioGroup
                android:id="@+id/answerOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="16dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_marginTop="16dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 0"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>

            <!-- Layout for Quiz Over -->
            <androidx.cardview.widget.CardView
                android:id="@+id/quizOverLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:elevation="8dp"
                android:radius="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/quizOverText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quiz Over!"
                        android:textSize="24sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/finalScoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Final Score: 0"
                        android:textSize="20sp"
                        android:layout_marginTop="16dp"
                        android:textColor="#000000"/>

                    <Button
                        android:id="@+id/returnButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Return to Dashboard"
                        android:layout_marginTop="24dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
